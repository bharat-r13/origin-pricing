{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "@playwright/test"],
    "outDir": "dist"
  },
  "include": ["pages/**/*.ts", "tests/**/*.ts", "utils/**/*.ts", "playwright.config.ts"]
}
